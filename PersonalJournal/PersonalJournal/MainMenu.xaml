<Window x:Class="PersonalJournal.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalJournal"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="image/book.png"/>
        
    </Window.Background>
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="290,18,0,0" TextWrapping="Wrap" Text="MAIN MENU PAGE" VerticalAlignment="Top" Width="227" Height="35" FontFamily="Segoe UI Black" FontSize="24" RenderTransformOrigin="1.564,0.503"/>
        <Button Content="VIEW JOURNAL" HorizontalAlignment="Left" Margin="340,160,0,0" VerticalAlignment="Top" Width="126" Height="39" RenderTransformOrigin="0.479,0.405" Click="viewclick"/>
        <Button Content="NEW JOURNAL ENTRY" HorizontalAlignment="Left" Margin="340,227,0,0" VerticalAlignment="Top" Width="126" RenderTransformOrigin="2.611,-1.083" Height="39" Click="newclick"/>
        <Button Content="UPDATE PASSWORD" HorizontalAlignment="Left" Margin="340,294,0,0" VerticalAlignment="Top" Width="124" Height="46" Click="passwordclick"/>
    </Grid>
</Window>
